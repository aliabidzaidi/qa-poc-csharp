@model QuestionAnswerPortal.Models.AnswerViewModel
@{
    ViewBag.Title = "Answer";
}



<div class="container">

    <div class="col-md-12">
        @if (ViewBag.Question == null)
        {
            <div class="alert alert-danger">
                Error loading question, please refresh or try again later...
            </div>
        }
        else
        {

            <h3 class="font-weight-bold my-4">Question</h3>

            <div class="card mb-4">
                <div class="card-header">
                    @ViewBag.Question.UserName
                    <span class="float-right">@ViewBag.Question.DatePublished.ToString("dd/MM/yyyy")</span>
                </div>
                <div class="card-body">
                    <p class="card-text">@ViewBag.Question.QuestionText</p>
                </div>
            </div>
        }
    </div>

    @using (Html.BeginForm("AddAnswer", "Question", FormMethod.Post))
    {
        @Html.ValidationSummary()
        @Html.HiddenFor(item => item.QuestionId)
        <hr />
        @* Add All Form Items for Answer*@
        <h3 class="font-weight-bold pl-3">Answer</h3>
        <div class="form-group">
            @Html.LabelFor(item => item.AnswerText, new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.TextAreaFor(item => item.AnswerText, htmlAttributes: new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(item => item.AnswerText, "", new { @class = "text-danger col-md-12" })
        </div>

        <div class="form-group">
            @Html.LabelFor(item => item.Link, new { @class = "control-label col-md-12" })
            <div class="col-md-12">
                @Html.TextBoxFor(item => item.Link, htmlAttributes: new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(item => item.Link, "", new { @class = "text-danger col-md-12" })
        </div>

        @*<div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(item => item.IsPublic, new { @class = "control-label mr-3" })
                    @Html.CheckBoxFor(item => item.IsPublic, htmlAttributes: new { @class = "" })
                </div>
            </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-outline-success" />
            </div>
        </div>
    }


</div>
